@using LeagueHistory.Core.Enums
@{
    ViewData["Title"] = "";
}

<section class="text-gray-400 bg-gray-900 body-font relative">
    <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-col text-center w-full mb-12">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-white">Lookup Summoner</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base">You can search for the summoner by name and region <b>or</b> by puuid.</p>
        </div>
        <div class="lg:w-1/3 md:w-2/3 mx-auto">
            <form action="/Lookup">
            <div class="flex flex-wrap -m-2">
                <div class="p-2 w-1/2">
                    <div class="relative">
                        <label for="summonerName" class="leading-7 text-sm text-gray-400">Summoner Name</label>
                        <input type="text" id="summonerName" name="summonerName" class="w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-indigo-500 focus:bg-gray-900 focus:ring-2 focus:ring-indigo-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                </div>
                <div class="p-2 w-1/2">
                    <div class="relative">
                        <label class="leading-7 text-sm text-gray-400">Region</label>
                        <select name="Region" class="mr-10 w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-indigo-500 focus:bg-gray-900 focus:ring-2 focus:ring-indigo-900 text-base outline-none text-gray-100 py-2 px-3 leading-8 transition-colors duration-200 ease-in-out">
                            <option selected>EUW</option>
                            @foreach (var region in Enum.GetValues<Region>().Where(d => d != Region.EUW))
                            {
                                <option>@region</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="p-2 w-full">
                    <div class="relative">
                        <label class="leading-7 text-sm text-gray-400">Puuid</label>
                        <input type="text" id="Puuid" name="Puuid" class="w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-indigo-500 focus:bg-gray-900 focus:ring-2 focus:ring-indigo-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                </div>
                <div class="p-2 w-full">
                    <button class="flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Lookup</button>
                </div>
            </div>
            </form>
        </div>
    </div>
</section>